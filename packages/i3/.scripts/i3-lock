       --separator-color=00000000 --keyhl-color=ffffffff \
       --ring-color=ffffff55 --inside-color=00000000 \
       --ringver-color=ffffffff --insidever-color=00000000 \
       --ringwrong-color=FF3333FF --insidewrong-color=00000000 \
       --time-str='%H:%M' --time-pos='ix:iy-h/4-64' --time-color=ffffffff --time-size=86 --time-font=sans-serif:bold \
       --date-pos='tx:ty+64' --date-color=ffffff99 --date-size=24 \
       --verif-text='' \
       --wrong-text='' \
       --noinput-text='' \
       --greeter-text='Type password to unlock' --greeter-pos="ix:iy+h/2-64" --greeter-color=ffffff99 --greeter-size=16 \
       --clock -c 00000055
